BOT_TOKEN=
SUPER_ADMIN_ID=
SUPER_ADMIN_USERNAME=@your_username

# Порт админки на хосте/контейнере
ADMIN_PORT=8000

# (Опционально) Хост для админки при локальном запуске
# Для доступа из локальной сети укажите 0.0.0.0
# ADMIN_HOST=0.0.0.0

# Путь к SQLite-базе внутри контейнеров
# По умолчанию: data/marm.sqlite3 (монтируется из ./data)
# Если у вас уже есть другая БД (например data/marm.db), пропишите:
# DB_PATH=data/marm.db
DB_PATH=data/marm.sqlite3
